<h1>Dashboard</h1>

<a class="btn btn-lg btn-secondary" href="/animals">Animals</a>
<a class="btn btn-lg btn-secondary" href="/environment">Environment</a>
<a class="btn btn-lg btn-secondary" href="/recipes">Recipe</a>

{{!-- animals --}}
{{#each animalList}}
<h3>{{name}}</h3>
<br>
<iframe width="560" height="315" src="https://www.youtube.com/embed/{{url}}" frameborder="0"
  allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
<br>
<br>
<a href="{{url}}">YouTube video</a>
{{/each}}


{{!-- environment --}}
{{#each envFacts}}
<ul>
  {{#each facts}}
  <li>{{this}}</li>
  {{/each}}
</ul>
<ul>
  {{#each sources}}
  <li>{{this}}</li>
  {{/each}}
</ul>

{{/each}}

{{!-- recipe --}}
{{#each recipeList}}
<h2>{{title}}</h2>
{{/each}}